{
  "name": "coursier-setup-action",
  "version": "1.0.0",
  "private": true,
  "description": "Use Coursier to install JVM and Scala apps",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "esbuild src/main.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --sourcemap",
    "all": "npm run build && npm run format-check && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coursier/setup-action.git"
  },
  "keywords": [
    "actions",
    "scala",
    "coursier",
    "setup"
  ],
  "author": "Alexey Alekhin",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "@actions/tool-cache": "^4.0.0",
    "compare-versions": "^6.1.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.54.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-plugin-github": "^6.0.0",
    "js-yaml": "^4.1.1",
    "prettier": "3.8.1",
    "typescript": "^5.9.3"
  }
}
